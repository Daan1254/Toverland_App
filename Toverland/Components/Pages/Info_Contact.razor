@page "/Info_Contact"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="top_blok">
        <a class="terug_knop_klas" href="/Info">
            <button class="terug_knop">
                <img src="/images/TERUG_KNOP.png" alt="Terug_Knop" class="terug_knop" />
            </button>
        </a>
        <img src="/images/BOVENSTUK.png" alt="Logo" class="logo" />
        <div class="navigatie_knop">
        </div>
    </div>

    <div class="lijst_sectie">
        <img src="images/BORDER.png" alt="Border" class="border" />
        <div class="witte_vlak">
            <div class="attractie_titel">
                <h1 class="contact_titel">Contacteer Toverland</h1>
                <div class="blauwe_onderlijning"></div>
                <div class="contact_opties">
                    <div class="contact_facebook">
                        <img src="/images/FACEBOOK.png" alt="Facebook" class="facebook" />
                        <p><strong><em>Ga naar de Facebookpagina van Toverland. ></em></strong></p>
                    </div>
                    <div class="contact_instagram">
                        <img src="/images/INSTAGRAM.png" alt="Instagram" class="instagram" />
                        <p><strong><em>Ga naar de Instagrampagina van Toverland. ></em></strong></p>
                    </div>
                    <div class="contact_mail">
                        <img src="/images/MAIL.png" alt="Mail" class="mail" />
                        <p><strong>Mail:</strong> info@toverland.nl</p>
                    </div>
                    <div class="contact_telefoon">
                        <img src="/images/TELEFOON.png" alt="Telefoon" class="telefoon" />
                        <p><strong>Telefoon:</strong> +31 77 467 70 50</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="nav_blok">
        <button class="kaart_knop" onclick="navigateTo('Kaart')">
            <div class="knop_plaatje">
                <img src="/images/KAART_ICON.png" alt="Kaart_Icon" class="kaart_icon" />
            </div>
            <div class="knop_titel">
                <p><strong>Kaart</strong></p>
            </div>
        </button>
        <button class="lijst_knop" onclick="navigateTo('Lijst')">
            <div class="knop_plaatje">
                <img src="/images/LIJST_ICON.png" alt="Lijst_Icon" class="lijst_icon" />
            </div>
            <div class="knop_titel">
                <p><strong>Lijst</strong></p>
            </div>
        </button>
        <button class="info_knop" onclick="navigateTo('Info')">
            <div class="knop_plaatje">
                <img src="/images/INFO_ICON.png" alt="Info_Icon" class="info_icon" />
            </div>
            <div class="knop_titel">
                <p><strong>Info</strong></p>
            </div>
        </button>
        <button class="ticket_knop" onclick="navigateTo('Tickets')">
            <div class="knop_plaatje">
                <img src="/images/TICKET_ICON.png" alt="Ticket_Icon" class="ticket_icon" />
            </div>
            <div class="knop_titel">
                <p><strong>Tickets</strong></p>
            </div>
        </button>
    </div>

    <script>
        function navigateTo(page) {
            window.location.href = `/${page}`;
        }
    </script>

</body>
</html>