@page "/Info_FAQ"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FAQ</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="top_blok">
        <a class="terug_knop_klas" href="/Info">
            <button class="terug_knop">
                <img src="/images/TERUG_KNOP.png" alt="Terug_Knop" class="terug_knop" />
            </button>
        </a>
        <img src="/images/BOVENSTUK.png" alt="Logo" class="logo" />
        <div class="navigatie_knop">
        </div>
    </div>

    <div class="lijst_sectie">
        <div class="attractie_titel">
            <h1 class="faq_titel">FAQ</h1>
            <div class="faq_opties">
                <div class="eerste_button">
                    <button class="eerste_vraag">Waar kan ik een parkeerkaart kopen?</button>
                </div>
                <div class="tweede_button">
                    <button class="tweede_vraag">Is roken toegestaan in Toverland?</button>
                </div>
                <div class="derde_button">
                    <button class="derde_vraag">Zijn er kluisjes beschikbaar?</button>
                </div>
                <div class="vierde_button">
                    <button class="vierde_vraag">Zijn huisdieren toegestaan?</button>
                </div>
                <div class="vijfde_button">
                    <button class="vijfde_vraag">Waar kan ik babyvoeding opwarmen?</button>
                </div>
                <div class="zesde_button">
                    <button class="zesde_vraag">Ik ben iets verloren in het park, wat nu?</button>
                </div>
            </div>
        </div>
    </div>

    <div class="nav_blok">
        <button class="kaart_knop" onclick="navigateTo('Kaart')">
            <div class="knop_plaatje">
                <img src="/images/KAART_ICON.png" alt="Kaart_Icon" class="kaart_icon" />
            </div>
            <div class="knop_titel">
                <p><strong>Kaart</strong></p>
            </div>
        </button>
        <button class="lijst_knop" onclick="navigateTo('Lijst')">
            <div class="knop_plaatje">
                <img src="/images/LIJST_ICON.png" alt="Lijst_Icon" class="lijst_icon" />
            </div>
            <div class="knop_titel">
                <p><strong>Lijst</strong></p>
            </div>
        </button>
        <button class="info_knop" onclick="navigateTo('Info')">
            <div class="knop_plaatje">
                <img src="/images/INFO_ICON.png" alt="Info_Icon" class="info_icon" />
            </div>
            <div class="knop_titel">
                <p><strong>Info</strong></p>
            </div>
        </button>
        <button class="ticket_knop" onclick="navigateTo('Tickets')">
            <div class="knop_plaatje">
                <img src="/images/TICKET_ICON.png" alt="Ticket_Icon" class="ticket_icon" />
            </div>
            <div class="knop_titel">
                <p><strong>Tickets</strong></p>
            </div>
        </button>
    </div>

    <script>
        function navigateTo(page) {
            window.location.href = `/${page}`;
        }
    </script>

</body>
</html>